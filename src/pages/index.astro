---
// src/pages/campaigns/index.astro
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { supabase, getSession, getUserProfile } from '../../lib/supabase';

const session = await getSession(Astro.cookies);
let userProfile = null;
if (session) {
  userProfile = await getUserProfile(session.user.id);
}

// Fetch active campaigns
const { data: campaigns } = await supabase
  .from('campaigns')
  .select(`
    *,
    profiles!manager_id(full_name, avatar_url)
  `)
  .eq('status', 'active')
  .order('created_at', { ascending: false });
---

<Layout title="Campaigns">
  <style>
    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }
    
    .page-title {
      font-family: var(--font-serif);
      font-size: 2.5rem;
      font-weight: 700;
    }
    
    .create-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: var(--color-accent);
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.2s;
    }
    
    .create-btn:hover {
      background: #1d4ed8;
      transform: translateY(-2px);
    }
    
    .campaigns-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 1.5rem;
    }
    
    .campaign-card {
      background: white;
      border-radius: 12px;
      border: 1px solid var(--color-border);
      overflow: hidden;
      transition: all 0.3s;
    }
    
    .campaign-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 24px rgba(0,0,0,0.08);
    }
    
    .campaign-cover {
      width: 100%;
      height: 180px;
      object-fit: cover;
      background: linear-gradient(135deg, var(--color-accent-light) 0%, #e0e7ff 100%);
    }
    
    .campaign-body {
      padding: 1.5rem;
    }
    
    .campaign-title {
      font-family: var(--font-serif);
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--color-ink);
    }
    
    .campaign-description {
      color: var(--color-muted);
      font-size: 0.9375rem;
      line-height: 1.6;
      margin-bottom: 1rem;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .campaign-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid var(--color-border);
    }
    
    .campaign-payout {
      font-weight: 600;
      color: var(--color-accent);
    }
    
    .campaign-slots {
      font-size: 0.875rem;
      color: var(--color-muted);
    }
    
    .campaign-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      background: #fafafa;
      border-top: 1px solid var(--color-border);
    }
    
    .manager-info {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.875rem;
      color: var(--color-muted);
    }
    
    .manager-avatar {
      width: 24px;
      height: 24px;
      border-radius: 50%;
      background: var(--color-accent-light);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.75rem;
      font-weight: 600;
      color: var(--color-accent);
    }
    
    .view-btn {
      padding: 0.5rem 1rem;
      background: var(--color-ink);
      color: white;
      text-decoration: none;
      border-radius: 6px;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.2s;
    }
    
    .view-btn:hover {
      background: #333;
    }
    
    .hashtags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }
    
    .hashtag {
      font-size: 0.75rem;
      padding: 0.25rem 0.5rem;
      background: var(--color-accent-light);
      color: var(--color-accent);
      border-radius: 4px;
    }
    
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      background: white;
      border-radius: 12px;
      border: 1px solid var(--color-border);
    }
    
    .empty-state-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    
    .empty-state-title {
      font-family: var(--font-serif);
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    .empty-state-text {
      color: var(--color-muted);
    }
    
    @media (max-width: 768px) {
      .campaigns-grid {
        grid-template-columns: 1fr;
      }
      
      .page-header {
        flex-direction: column;
        gap: 1rem;
        align-items: flex-start;
      }
    }
  </style>

  <div class="page-header">
    <h1 class="page-title">Active Campaigns</h1>
    {userProfile?.role === 'manager' && (
      <a href="/campaigns/create" class="create-btn">
        + Create Campaign
      </a>
    )}
  </div>
  
  {campaigns && campaigns.length > 0 ? (
    <div class="campaigns-grid">
      {campaigns.map((campaign) => (
        <div class="campaign-card">
          {campaign.cover_image_url ? (
            <img src={campaign.cover_image_url} alt={campaign.title} class="campaign-cover" />
          ) : (
            <div class="campaign-cover"></div>
          )}
          
          <div class="campaign-body">
            <h2 class="campaign-title">{campaign.title}</h2>
            <p class="campaign-description">
              {campaign.description || 'No description provided.'}
            </p>
            
            {campaign.hashtags && campaign.hashtags.length > 0 && (
              <div class="hashtags">
                {campaign.hashtags.slice(0, 3).map((tag) => (
                  <span class="hashtag">#{tag}</span>
                ))}
              </div>
            )}
            
            <div class="campaign-meta">
              <span class="campaign-payout">
                ${campaign.payout_per_post || 0} per post
              </span>
              <span class="campaign-slots">
                {campaign.max_creators || 10} spots
              </span>
            </div>
          </div>
          
          <div class="campaign-footer">
            <div class="manager-info">
              <div class="manager-avatar">
                {campaign.profiles?.full_name?.charAt(0) || 'M'}
              </div>
              <span>{campaign.profiles?.full_name || 'Manager'}</span>
            </div>
            <a href={`/campaigns/${campaign.slug || campaign.id}`} class="view-btn">
              View Details
            </a>
          </div>
        </div>
      ))}
    </div>
  ) : (
    <div class="empty-state">
      <div class="empty-state-icon">ðŸ“¢</div>
      <h2 class="empty-state-title">No Active Campaigns</h2>
      <p class="empty-state-text">Check back soon for new opportunities!</p>
    </div>
  )}
</Layout>
