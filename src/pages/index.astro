// src/pages/admin/index.astro
export const prerender = false;

import { supabase, getSession, getUserProfile, isAdmin } from '../../lib/supabase';

// Check authentication
const session = await getSession(Astro.cookies);
if (!session) {
  return Astro.redirect('/admin/login');
}

// Check if user is admin
const userIsAdmin = await isAdmin(session.user.id);
if (!userIsAdmin) {
  return Astro.redirect('/unauthorized');
}

// Fetch dashboard stats
const { count: totalUsers } = await supabase
  .from('profiles')
  .select('*', { count: 'exact', head: true });

const { count: totalCampaigns } = await supabase
  .from('campaigns')
  .select('*', { count: 'exact', head: true });

const { count: pendingPosts } = await supabase
  .from('posts')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'pending');

const { count: totalCommunities } = await supabase
  .from('communities')
  .select('*', { count: 'exact', head: true });

// Recent users
const { data: recentUsers } = await supabase
  .from('profiles')
  .select('*')
  .order('created_at', { ascending: false })
  .limit(5);

// Pending posts for review
const { data: pendingReviews } = await supabase
  .from('posts')
  .select('*, profiles!creator_id(full_name, email), campaigns(title)')
  .eq('status', 'pending')
  .order('created_at', { ascending: false })
  .limit(5);
