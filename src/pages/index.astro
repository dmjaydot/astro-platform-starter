---
// src/pages/community/index.astro
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { supabase, getSession, getUserProfile } from '../../lib/supabase';

const session = await getSession(Astro.cookies);
let userProfile = null;
let userCommunities: string[] = [];

if (session) {
  userProfile = await getUserProfile(session.user.id);
  
  // Get communities user has joined
  const { data: memberships } = await supabase
    .from('community_members')
    .select('community_id')
    .eq('user_id', session.user.id);
  
  userCommunities = memberships?.map(m => m.community_id) || [];
}

// Handle join/leave
let message = '';
if (Astro.request.method === 'POST' && session) {
  const form = await Astro.request.formData();
  const communityId = form.get('communityId') as string;
  const action = form.get('action') as string;
  
  if (action === 'join') {
    const { error } = await supabase.from('community_members').insert({
      community_id: communityId,
      user_id: session.user.id
    });
    if (!error) {
      userCommunities.push(communityId);
      message = 'Joined community!';
    }
  } else if (action === 'leave') {
    await supabase.from('community_members')
      .delete()
      .eq('community_id', communityId)
      .eq('user_id', session.user.id);
    userCommunities = userCommunities.filter(id => id !== communityId);
    message = 'Left community';
  }
}

// Fetch public communities
const { data: communities } = await supabase
  .from('communities')
  .select(`
    *,
    profiles!manager_id(full_name),
    campaigns(title)
  `)
  .eq('visibility', 'public')
  .order('member_count', { ascending: false });
---

<Layout title="Community">
  <style>
    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }
    
    .page-title {
      font-family: var(--font-serif);
      font-size: 2.5rem;
      font-weight: 700;
    }
    
    .page-subtitle {
      color: var(--color-muted);
      margin-top: 0.5rem;
    }
    
    .alert {
      padding: 1rem;
      border-radius: 8px;
      margin-bottom: 1.5rem;
      background: #d1fae5;
      color: #065f46;
    }
    
    .section-title {
      font-family: var(--font-serif);
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 1.5rem;
    }
    
    .communities-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 1.5rem;
      margin-bottom: 3rem;
    }
    
    .community-card {
      background: white;
      border-radius: 12px;
      border: 1px solid var(--color-border);
      overflow: hidden;
      transition: all 0.3s;
    }
    
    .community-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 24px rgba(0,0,0,0.08);
    }
    
    .community-cover {
      width: 100%;
      height: 120px;
      object-fit: cover;
      background: linear-gradient(135deg, #dbeafe 0%, #e0e7ff 100%);
    }
    
    .community-body {
      padding: 1.25rem;
    }
    
    .community-name {
      font-family: var(--font-serif);
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    .community-name a {
      color: var(--color-ink);
      text-decoration: none;
    }
    
    .community-name a:hover {
      color: var(--color-accent);
    }
    
    .community-description {
      color: var(--color-muted);
      font-size: 0.9375rem;
      line-height: 1.6;
      margin-bottom: 1rem;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .community-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .member-count {
      font-size: 0.875rem;
      color: var(--color-muted);
    }
    
    .campaign-tag {
      font-size: 0.75rem;
      padding: 0.25rem 0.5rem;
      background: var(--color-accent-light);
      color: var(--color-accent);
      border-radius: 4px;
    }
    
    .community-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.25rem;
      background: #fafafa;
      border-top: 1px solid var(--color-border);
    }
    
    .manager-info {
      font-size: 0.875rem;
      color: var(--color-muted);
    }
    
    .join-btn,
    .leave-btn,
    .view-btn {
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 6px;
      font-size: 0.875rem;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.2s;
    }
    
    .join-btn {
      background: var(--color-accent);
      color: white;
    }
    
    .join-btn:hover {
      background: #1d4ed8;
    }
    
    .leave-btn {
      background: #f3f4f6;
      color: #6b7280;
    }
    
    .leave-btn:hover {
      background: #e5e7eb;
    }
    
    .view-btn {
      background: var(--color-ink);
      color: white;
    }
    
    .view-btn:hover {
      background: #333;
    }
    
    .joined-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.25rem;
      font-size: 0.75rem;
      color: var(--color-success);
      font-weight: 600;
    }
    
    .login-prompt {
      text-align: center;
      padding: 3rem 2rem;
      background: white;
      border-radius: 12px;
      border: 1px solid var(--color-border);
      margin-bottom: 2rem;
    }
    
    .login-prompt p {
      color: var(--color-muted);
      margin-bottom: 1rem;
    }
    
    .login-link {
      color: var(--color-accent);
      font-weight: 600;
    }
    
    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
      background: white;
      border-radius: 12px;
      border: 1px solid var(--color-border);
    }
    
    .empty-state-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    
    .empty-state-title {
      font-family: var(--font-serif);
      font-size: 1.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
    }
    
    .empty-state-text {
      color: var(--color-muted);
    }
    
    @media (max-width: 768px) {
      .communities-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <div class="page-header">
    <div>
      <h1 class="page-title">Community</h1>
      <p class="page-subtitle">Connect with other creators and campaign participants</p>
    </div>
  </div>
  
  {message && <div class="alert">{message}</div>}
  
  {!session && (
    <div class="login-prompt">
      <p>Join communities to connect with other creators and participate in discussions</p>
      <a href="/clips" class="login-link">Sign up to get started â†’</a>
    </div>
  )}
  
  {userCommunities.length > 0 && (
    <>
      <h2 class="section-title">Your Communities</h2>
      <div class="communities-grid">
        {communities?.filter(c => userCommunities.includes(c.id)).map((community) => (
          <div class="community-card">
            {community.cover_image_url ? (
              <img src={community.cover_image_url} alt={community.name} class="community-cover" />
            ) : (
              <div class="community-cover"></div>
            )}
            
            <div class="community-body">
              <h3 class="community-name">
                <a href={`/community/${community.slug || community.id}`}>{community.name}</a>
              </h3>
              <p class="community-description">
                {community.description || 'No description'}
              </p>
              <div class="community-meta">
                <span class="member-count">{community.member_count} members</span>
                <span class="joined-badge">âœ“ Joined</span>
              </div>
            </div>
            
            <div class="community-footer">
              <span class="manager-info">by {community.profiles?.full_name || 'Manager'}</span>
              <a href={`/community/${community.slug || community.id}`} class="view-btn">View</a>
            </div>
          </div>
        ))}
      </div>
    </>
  )}
  
  <h2 class="section-title">Discover Communities</h2>
  
  {communities && communities.filter(c => !userCommunities.includes(c.id)).length > 0 ? (
    <div class="communities-grid">
      {communities.filter(c => !userCommunities.includes(c.id)).map((community) => (
        <div class="community-card">
          {community.cover_image_url ? (
            <img src={community.cover_image_url} alt={community.name} class="community-cover" />
          ) : (
            <div class="community-cover"></div>
          )}
          
          <div class="community-body">
            <h3 class="community-name">
              <a href={`/community/${community.slug || community.id}`}>{community.name}</a>
            </h3>
            <p class="community-description">
              {community.description || 'No description'}
            </p>
            <div class="community-meta">
              <span class="member-count">{community.member_count} members</span>
              {community.campaigns && (
                <span class="campaign-tag">{community.campaigns.title}</span>
              )}
            </div>
          </div>
          
          <div class="community-footer">
            <span class="manager-info">by {community.profiles?.full_name || 'Manager'}</span>
            {session ? (
              <form method="POST" style="display: inline;">
                <input type="hidden" name="communityId" value={community.id} />
                <button type="submit" name="action" value="join" class="join-btn">
                  Join
                </button>
              </form>
            ) : (
              <a href="/clips" class="join-btn">Join</a>
            )}
          </div>
        </div>
      ))}
    </div>
  ) : (
    <div class="empty-state">
      <div class="empty-state-icon">ðŸ’¬</div>
      <h2 class="empty-state-title">No Communities Yet</h2>
      <p class="empty-state-text">Communities will appear here as campaigns launch.</p>
    </div>
  )}
</Layout>
