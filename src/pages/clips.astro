---
// src/pages/clips.astro
import Layout from '../layouts/Layout.astro';
---
<Layout title="Clips">
    <style>
        .clips-hero {
            text-align: center;
            padding: 3rem 0 2rem;
            animation: fadeIn 0.6s ease-out;
        }
        
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
        }
        
        .clips-hero h1 {
            font-family: var(--font-serif);
            font-size: 4rem;
            font-weight: 700;
            line-height: 1.1;
            letter-spacing: -0.03em;
            margin-bottom: 1rem;
        }
        
        .hero-subtitle {
            font-size: 1.25rem;
            color: var(--color-muted);
            max-width: 650px;
            margin: 0 auto 3rem;
            line-height: 1.6;
        }
        
        .signup-container {
            max-width: 600px;
            margin: 0 auto;
            background: white;
            border: 1px solid var(--color-border);
            border-radius: 16px;
            padding: 3rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
            animation: fadeIn 0.6s ease-out 0.2s both;
        }
        
        .form-title {
            font-family: var(--font-serif);
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
            text-align: center;
        }
        
        .form-subtitle {
            color: var(--color-muted);
            text-align: center;
            margin-bottom: 2rem;
            font-size: 0.9375rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
            font-size: 0.9375rem;
            color: var(--color-ink);
        }
        
        .form-label .required {
            color: #ef4444;
        }
        
        .form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid var(--color-border);
            border-radius: 8px;
            font-size: 1rem;
            font-family: var(--font-sans);
            transition: all 0.2s;
            background: var(--color-paper);
        }
        
        .form-input:focus {
            outline: none;
            border-color: var(--color-accent);
            background: white;
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
        }
        
        .form-input::placeholder {
            color: #9ca3af;
        }

        .form-help-text {
            font-size: 0.875rem;
            color: var(--color-muted);
            margin-top: 0.25rem;
        }

        .password-strength {
            height: 4px;
            background: #e5e7eb;
            border-radius: 2px;
            margin-top: 0.5rem;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            transition: all 0.3s;
            width: 0%;
        }

        .password-strength-bar.weak {
            background: #ef4444;
            width: 33.33%;
        }

        .password-strength-bar.medium {
            background: #f59e0b;
            width: 66.66%;
        }

        .password-strength-bar.strong {
            background: #10b981;
            width: 100%;
        }

        .input-prefix {
            display: flex;
            align-items: center;
        }

        .input-prefix-text {
            padding: 0.875rem 1rem;
            background: #f3f4f6;
            border: 2px solid var(--color-border);
            border-right: none;
            border-radius: 8px 0 0 8px;
            color: var(--color-muted);
            font-weight: 500;
        }

        .input-prefix .form-input {
            border-radius: 0 8px 8px 0;
        }
        
        .form-checkbox-group {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
        }
        
        .form-checkbox {
            width: 1.25rem;
            height: 1.25rem;
            margin-top: 0.125rem;
            cursor: pointer;
            accent-color: var(--color-accent);
        }
        
        .form-checkbox-label {
            font-size: 0.9375rem;
            color: var(--color-muted);
            line-height: 1.5;
            cursor: pointer;
        }
        
        .form-checkbox-label a {
            color: var(--color-accent);
            text-decoration: none;
            border-bottom: 1px solid transparent;
            transition: border-color 0.2s;
        }
        
        .form-checkbox-label a:hover {
            border-bottom-color: var(--color-accent);
        }
        
        .submit-btn {
            width: 100%;
            padding: 1rem;
            background: var(--color-accent);
            color: white;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.0625rem;
            cursor: pointer;
            transition: all 0.3s;
            font-family: var(--font-sans);
            letter-spacing: 0.01em;
        }
        
        .submit-btn:hover:not(:disabled) {
            background: #1d4ed8;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(37, 99, 235, 0.4);
        }
        
        .submit-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .success-message {
            display: none;
            background: #d1fae5;
            border: 2px solid #34d399;
            color: #065f46;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            text-align: center;
            font-weight: 500;
        }
        
        .success-message.show {
            display: block;
            animation: slideIn 0.3s ease-out;
        }
        
        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
        }
        
        .error-message {
            display: none;
            background: #fee2e2;
            border: 2px solid #ef4444;
            color: #991b1b;
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            text-align: center;
            font-weight: 500;
        }
        
        .error-message.show {
            display: block;
            animation: slideIn 0.3s ease-out;
        }
        
        .features-preview {
            max-width: 1000px;
            margin: 5rem auto 0;
            text-align: center;
        }
        
        .features-title {
            font-family: var(--font-serif);
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 3rem;
        }
        
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }
        
        .feature-item {
            padding: 1.5rem;
        }
        
        .feature-icon {
            width: 3rem;
            height: 3rem;
            background: var(--color-accent-light);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }
        
        .feature-item h3 {
            font-family: var(--font-serif);
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .feature-item p {
            color: var(--color-muted);
            font-size: 0.9375rem;
            line-height: 1.6;
        }
        
        @media (max-width: 768px) {
            .clips-hero h1 {
                font-size: 2.5rem;
            }
            
            .signup-container {
                padding: 2rem 1.5rem;
            }
            
            .features-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
    <!-- Hero Section -->
    <section class="clips-hero">
        <h1>Join Banity Creators</h1>
        <p class="hero-subtitle">
            Create your account and start receiving campaign opportunities from top brands. 
            Be part of the next generation of authentic content creators.
        </p>
    </section>
    <!-- Sign Up Form -->
    <div class="signup-container">
        <h2 class="form-title">Get Started</h2>
        <p class="form-subtitle">Fill out the form below to create your creator account</p>
        
        <div id="successMessage" class="success-message">
            ✓ Account created successfully! Redirecting to login...
        </div>
        
        <div id="errorMessage" class="error-message"></div>
        
        <form id="signupForm">
            <!-- Full Name -->
            <div class="form-group">
                <label for="fullName" class="form-label">
                    Full Name <span class="required">*</span>
                </label>
                <input 
                    type="text" 
                    id="fullName" 
                    name="fullName" 
                    class="form-input" 
                    placeholder="John Doe"
                    required
                />
            </div>
            
            <!-- Email -->
            <div class="form-group">
                <label for="email" class="form-label">
                    Email Address <span class="required">*</span>
                </label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-input" 
                    placeholder="you@example.com"
                    required
                />
            </div>
            
            <!-- Password -->
            <div class="form-group">
                <label for="password" class="form-label">
                    Password <span class="required">*</span>
                </label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    class="form-input" 
                    placeholder="Create a strong password"
                    required
                    minlength="8"
                />
                <div class="password-strength">
                    <div class="password-strength-bar" id="passwordStrengthBar"></div>
                </div>
                <p class="form-help-text">Minimum 8 characters, include numbers and special characters</p>
            </div>

            <!-- Phone -->
            <div class="form-group">
                <label for="phone" class="form-label">
                    Phone Number
                </label>
                <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    class="form-input" 
                    placeholder="+1 (555) 123-4567"
                />
                <p class="form-help-text">Optional - for account recovery</p>
            </div>
            
            <!-- Instagram Handle -->
            <div class="form-group">
                <label for="instagram" class="form-label">
                    Instagram Handle
                </label>
                <div class="input-prefix">
                    <span class="input-prefix-text">@</span>
                    <input 
                        type="text" 
                        id="instagram" 
                        name="instagram" 
                        class="form-input" 
                        placeholder="yourusername"
                    />
                </div>
            </div>

            <!-- TikTok Handle -->
            <div class="form-group">
                <label for="tiktok" class="form-label">
                    TikTok Handle
                </label>
                <div class="input-prefix">
                    <span class="input-prefix-text">@</span>
                    <input 
                        type="text" 
                        id="tiktok" 
                        name="tiktok" 
                        class="form-input" 
                        placeholder="yourusername"
                    />
                </div>
            </div>
            
            <!-- Terms Checkbox -->
            <div class="form-checkbox-group">
                <input 
                    type="checkbox" 
                    id="terms" 
                    name="terms" 
                    class="form-checkbox"
                    required
                />
                <label for="terms" class="form-checkbox-label">
                    I agree to the <a href="/legal#terms">Terms of Service</a> and 
                    <a href="/legal#privacy">Privacy Policy</a> <span class="required">*</span>
                </label>
            </div>
            
            <button type="submit" class="submit-btn" id="submitBtn">
                Create My Account
            </button>
        </form>
    </div>
    <!-- Features Preview -->
    <section class="features-preview">
        <h2 class="features-title">What You'll Get</h2>
        <div class="features-grid">
            <div class="feature-item">
                <div class="feature-icon">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                    </svg>
                </div>
                <h3>Campaign Alerts</h3>
                <p>Get notified about campaigns that match your profile and interests</p>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                </div>
                <h3>Easy Briefs</h3>
                <p>Clear campaign requirements and deliverables in one place</p>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
                <h3>Fast Payments</h3>
                <p>Get paid within 30 days of completing approved campaigns</p>
            </div>
            
            <div class="feature-item">
                <div class="feature-icon">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                </div>
                <h3>Community</h3>
                <p>Join a network of creators and learn from each other</p>
            </div>
        </div>
    </section>
    <script>
        const form = document.getElementById('signupForm');
        const submitBtn = document.getElementById('submitBtn');
        const successMessage = document.getElementById('successMessage');
        const errorMessage = document.getElementById('errorMessage');
        const passwordInput = document.getElementById('password');
        const passwordStrengthBar = document.getElementById('passwordStrengthBar');

        // Password strength indicator
        passwordInput.addEventListener('input', (e) => {
            const password = e.target.value;
            let strength = 0;

            // Check length
            if (password.length >= 8) strength++;
            if (password.length >= 12) strength++;

            // Check for numbers
            if (/\d/.test(password)) strength++;

            // Check for special characters
            if (/[!@#$%^&*(),.?":{}|<>]/.test(password)) strength++;

            // Check for uppercase and lowercase
            if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;

            // Update strength bar
            passwordStrengthBar.className = 'password-strength-bar';
            if (strength <= 2) {
                passwordStrengthBar.classList.add('weak');
            } else if (strength <= 4) {
                passwordStrengthBar.classList.add('medium');
            } else {
                passwordStrengthBar.classList.add('strong');
            }
        });

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Disable submit button
            submitBtn.disabled = true;
            submitBtn.textContent = 'Creating Account...';
            
            // Hide previous messages
            successMessage.classList.remove('show');
            errorMessage.classList.remove('show');
            errorMessage.textContent = '';
            
            // Get form data
            const formData = new FormData(form);
            const data = {
                fullName: formData.get('fullName').trim(),
                email: formData.get('email').trim().toLowerCase(),
                password: formData.get('password'),
                phone: formData.get('phone')?.trim() || null,
                instagram: formData.get('instagram')?.trim() || null,
                tiktok: formData.get('tiktok')?.trim() || null
            };

            // Basic validation
            if (data.password.length < 8) {
                errorMessage.textContent = '❌ Password must be at least 8 characters long';
                errorMessage.classList.add('show');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Create My Account';
                return;
            }
            
            try {
                // Call the Netlify Function
                const response = await fetch('/.netlify/functions/creator-signup', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    // Success
                    successMessage.classList.add('show');
                    form.reset();
                    passwordStrengthBar.className = 'password-strength-bar';
                    
                    // Redirect to login after 2 seconds
                    setTimeout(() => {
                        window.location.href = '/login'; // You'll create this page next
                    }, 2000);
                } else {
                    // Error from server
                    errorMessage.textContent = '❌ ' + (result.error || 'Something went wrong');
                    errorMessage.classList.add('show');
                }
                
            } catch (error) {
                console.error('Network error:', error);
                errorMessage.textContent = '❌ Network error. Please check your connection and try again.';
                errorMessage.classList.add('show');
            } finally {
                // Re-enable submit button
                submitBtn.disabled = false;
                submitBtn.textContent = 'Create My Account';
            }
        });
    </script>
</Layout>
