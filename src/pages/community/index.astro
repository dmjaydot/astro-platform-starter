---
// src/pages/communities/index.astro
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabase";

const session = Astro.locals.session;
const profile = Astro.locals.profile;

const isApproved = profile?.status === 'active' && profile?.is_active;

// Fetch communities
const { data: communities } = await supabase
  .from('communities')
  .select('id, name, slug, description, member_count, is_private')
  .order('member_count', { ascending: false });
---

<Layout title="Communities">
  <div class="communities-page">
    <div class="page-header">
      <div class="header-content">
        <h1>Creator Communities</h1>
        <p>Connect, share, and grow with fellow creators</p>
      </div>
      {!session && (
        <a href="/signup" class="btn btn-primary">Join to Participate</a>
      )}
    </div>

    {!session && (
      <div class="login-banner">
        <div class="banner-icon">üîê</div>
        <div class="banner-content">
          <h3>Join Our Creator Community</h3>
          <p>Create an account to join communities, post content, and connect with other creators.</p>
        </div>
        <div class="banner-actions">
          <a href="/signup" class="btn btn-primary">Sign Up</a>
          <a href="/login" class="btn btn-secondary">Log In</a>
        </div>
      </div>
    )}

    {session && !isApproved && (
      <div class="pending-banner">
        <div class="banner-icon">‚è≥</div>
        <div class="banner-content">
          <h3>Account Pending Approval</h3>
          <p>You can browse communities, but you'll need an approved account to join and participate.</p>
        </div>
      </div>
    )}

    {communities && communities.length > 0 ? (
      <div class="communities-grid">
        {communities.map(community => (
          <div class="community-card">
            <div class="community-header">
              <div class="community-icon">
                {community.is_private ? 'üîí' : 'üí¨'}
              </div>
              <div class="community-info">
                <h2>{community.name}</h2>
                <span class="member-count">{community.member_count || 0} members</span>
              </div>
            </div>
            
            {community.description && (
              <p class="community-desc">{community.description}</p>
            )}
            
            <div class="community-footer">
              {isApproved ? (
                <a href={`/community/${community.slug}`} class="btn btn-primary">
                  View Community
                </a>
              ) : session ? (
                <button class="btn btn-disabled" disabled>
                  Account Pending
                </button>
              ) : (
                <a href="/signup" class="btn btn-secondary">
                  Sign Up to Join
                </a>
              )}
              
              {community.is_private && (
                <span class="private-badge">Private</span>
              )}
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <div class="empty-icon">üí¨</div>
        <h2>No Communities Yet</h2>
        <p>Communities will appear here once they're created.</p>
      </div>
    )}
  </div>

  <style>
    .communities-page {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem;
    }

    .page-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 2rem;
    }

    .header-content h1 {
      font-size: 2rem;
      color: #1a1a2e;
      margin-bottom: 0.5rem;
    }

    .header-content p {
      color: #6b7280;
      font-size: 1.125rem;
    }

    .login-banner, .pending-banner {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      padding: 1.5rem;
      border-radius: 16px;
      margin-bottom: 2rem;
    }

    .login-banner {
      background: linear-gradient(135deg, #dbeafe 0%, #e0e7ff 100%);
      border: 2px solid #3b82f6;
    }

    .pending-banner {
      background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
      border: 2px solid #f59e0b;
    }

    .banner-icon {
      font-size: 2.5rem;
    }

    .banner-content {
      flex: 1;
    }

    .banner-content h3 {
      font-size: 1.125rem;
      color: #1a1a2e;
      margin-bottom: 0.25rem;
    }

    .banner-content p {
      color: #6b7280;
      margin: 0;
    }

    .banner-actions {
      display: flex;
      gap: 0.75rem;
    }

    .communities-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 1.5rem;
    }

    .community-card {
      background: white;
      border-radius: 16px;
      padding: 1.5rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.06);
      transition: all 0.2s;
    }

    .community-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    }

    .community-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .community-icon {
      width: 56px;
      height: 56px;
      background: linear-gradient(135deg, #dbeafe 0%, #c7d2fe 100%);
      border-radius: 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.75rem;
    }

    .community-info h2 {
      font-size: 1.125rem;
      color: #1a1a2e;
      margin-bottom: 0.25rem;
    }

    .member-count {
      font-size: 0.875rem;
      color: #6b7280;
    }

    .community-desc {
      color: #6b7280;
      font-size: 0.9375rem;
      margin-bottom: 1.25rem;
      line-height: 1.5;
    }

    .community-footer {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding-top: 1rem;
      border-top: 1px solid #f0f0f0;
    }

    .private-badge {
      font-size: 0.6875rem;
      padding: 0.25rem 0.75rem;
      background: #fef3c7;
      color: #92400e;
      border-radius: 999px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .btn {
      padding: 0.75rem 1.5rem;
      border-radius: 10px;
      font-weight: 600;
      font-size: 0.9375rem;
      text-decoration: none;
      border: none;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.2s;
    }

    .btn-primary {
      background: #2563eb;
      color: white;
    }

    .btn-primary:hover {
      background: #1d4ed8;
    }

    .btn-secondary {
      background: #f3f4f6;
      color: #374151;
    }

    .btn-secondary:hover {
      background: #e5e7eb;
    }

    .btn-disabled {
      background: #e5e7eb;
      color: #9ca3af;
      cursor: not-allowed;
    }

    .empty-state {
      text-align: center;
      padding: 4rem 2rem;
    }

    .empty-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
    }

    .empty-state h2 {
      color: #374151;
      margin-bottom: 0.5rem;
    }

    .empty-state p {
      color: #9ca3af;
    }

    @media (max-width: 768px) {
      .page-header {
        flex-direction: column;
        gap: 1rem;
      }

      .login-banner, .pending-banner {
        flex-direction: column;
        text-align: center;
      }

      .banner-actions {
        flex-direction: column;
        width: 100%;
      }

      .banner-actions .btn {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</Layout>
