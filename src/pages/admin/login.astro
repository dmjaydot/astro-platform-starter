// src/pages/admin/login.astro
export const prerender = false;

import { createClient } from "@supabase/supabase-js";

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
const masterKey = import.meta.env.ADMIN_MASTER_KEY;

let errorMessage = '';
let successMessage = '';

// Handle form submission
if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const loginType = form.get('loginType') as string;
  
  if (loginType === 'master_key') {
    // Master key login
    const submittedKey = form.get('masterKey') as string;
    
    if (!masterKey) {
      errorMessage = 'Master key not configured on server.';
    } else if (submittedKey === masterKey) {
      // Set master key session cookie (expires in 24 hours)
      const expiry = new Date(Date.now() + 24 * 60 * 60 * 1000);
      Astro.cookies.set('admin-master-session', masterKey, {
        path: '/',
        httpOnly: true,
        secure: import.meta.env.PROD,
        sameSite: 'lax',
        expires: expiry
      });
      return Astro.redirect('/admin');
    } else {
      errorMessage = 'Invalid master key.';
    }
  } else {
    // Regular Supabase login
    const email = form.get('email') as string;
    const password = form.get('password') as string;
    
    if (!supabaseUrl || !supabaseAnonKey) {
      errorMessage = 'Supabase not configured.';
    } else {
      const supabase = createClient(supabaseUrl, supabaseAnonKey);
      const { data, error } = await supabase.auth.signInWithPassword({
        email,
        password
      });
      
      if (error) {
        errorMessage = error.message;
      } else if (data.session) {
        // Check if user is admin
        const { data: adminRecord } = await supabase
          .from('admins')
          .select('id')
          .eq('id', data.session.user.id)
          .maybeSingle();
        
        if (!adminRecord) {
          // Also check profile role
          const { data: profile } = await supabase
            .from('profiles')
            .select('role')
            .eq('id', data.session.user.id)
            .single();
          
          if (profile?.role !== 'admin' && profile?.role !== 'moderator') {
            errorMessage = 'You do not have admin access.';
            await supabase.auth.signOut();
          } else {
            // Has role-based access
            Astro.cookies.set('sb-access-token', data.session.access_token, {
              path: '/',
              httpOnly: true,
              secure: import.meta.env.PROD,
              sameSite: 'lax',
              maxAge: 60 * 60 * 24 * 7
            });
            Astro.cookies.set('sb-refresh-token', data.session.refresh_token, {
              path: '/',
              httpOnly: true,
              secure: import.meta.env.PROD,
              sameSite: 'lax',
              maxAge: 60 * 60 * 24 * 7
            });
            return Astro.redirect('/admin');
          }
        } else {
          // Is in admins table
          Astro.cookies.set('sb-access-token', data.session.access_token, {
            path: '/',
            httpOnly: true,
            secure: import.meta.env.PROD,
            sameSite: 'lax',
            maxAge: 60 * 60 * 24 * 7
          });
          Astro.cookies.set('sb-refresh-token', data.session.refresh_token, {
            path: '/',
            httpOnly: true,
            secure: import.meta.env.PROD,
            sameSite: 'lax',
            maxAge: 60 * 60 * 24 * 7
          });
          return Astro.redirect('/admin');
        }
      }
    }
  }
}

// Check if already logged in
const accessToken = Astro.cookies.get('sb-access-token')?.value;
const masterSession = Astro.cookies.get('admin-master-session')?.value;

if (masterSession === masterKey && masterKey) {
  return Astro.redirect('/admin');
}

if (accessToken && supabaseUrl && supabaseAnonKey) {
  const supabase = createClient(supabaseUrl, supabaseAnonKey);
  const refreshToken = Astro.cookies.get('sb-refresh-token')?.value;
  
  if (refreshToken) {
    const { data } = await supabase.auth.setSession({
      access_token: accessToken,
      refresh_token: refreshToken
    });
    
    if (data.session) {
      const { data: adminRecord } = await supabase
        .from('admins')
        .select('id')
        .eq('id', data.session.user.id)
        .maybeSingle();
      
      if (adminRecord) {
        return Astro.redirect('/admin');
      }
    }
  }
}

const hasMasterKey = !!masterKey;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login - Banity</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
    }
    
    .login-container {
      background: white;
      border-radius: 16px;
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      width: 100%;
      max-width: 420px;
      overflow: hidden;
    }
    
    .login-header {
      background: #1a1a2e;
      color: white;
      padding: 2rem;
      text-align: center;
    }
    
    .login-logo {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }
    
    .login-subtitle {
      font-size: 0.875rem;
      opacity: 0.8;
    }
    
    .login-body {
      padding: 2rem;
    }
    
    .tabs {
      display: flex;
      border-bottom: 2px solid #f0f0f0;
      margin-bottom: 1.5rem;
    }
    
    .tab {
      flex: 1;
      padding: 0.75rem;
      text-align: center;
      cursor: pointer;
      font-weight: 500;
      color: #666;
      border-bottom: 2px solid transparent;
      margin-bottom: -2px;
      transition: all 0.2s;
    }
    
    .tab:hover {
      color: #1a1a2e;
    }
    
    .tab.active {
      color: #2563eb;
      border-bottom-color: #2563eb;
    }
    
    .tab-content {
      display: none;
    }
    
    .tab-content.active {
      display: block;
    }
    
    .form-group {
      margin-bottom: 1.25rem;
    }
    
    .form-label {
      display: block;
      font-weight: 600;
      margin-bottom: 0.5rem;
      font-size: 0.875rem;
      color: #374151;
    }
    
    .form-input {
      width: 100%;
      padding: 0.75rem 1rem;
      border: 2px solid #e5e7eb;
      border-radius: 8px;
      font-size: 1rem;
      transition: border-color 0.2s;
    }
    
    .form-input:focus {
      outline: none;
      border-color: #2563eb;
    }
    
    .form-input.master-key {
      font-family: monospace;
      letter-spacing: 0.05em;
    }
    
    .submit-btn {
      width: 100%;
      padding: 0.875rem;
      background: #2563eb;
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.2s;
    }
    
    .submit-btn:hover {
      background: #1d4ed8;
    }
    
    .submit-btn.master {
      background: #1a1a2e;
    }
    
    .submit-btn.master:hover {
      background: #0f0f1a;
    }
    
    .alert {
      padding: 0.75rem 1rem;
      border-radius: 8px;
      margin-bottom: 1rem;
      font-size: 0.875rem;
    }
    
    .alert.error {
      background: #fee2e2;
      color: #991b1b;
      border: 1px solid #fecaca;
    }
    
    .alert.success {
      background: #d1fae5;
      color: #065f46;
      border: 1px solid #a7f3d0;
    }
    
    .back-link {
      display: block;
      text-align: center;
      margin-top: 1.5rem;
      color: #6b7280;
      text-decoration: none;
      font-size: 0.875rem;
    }
    
    .back-link:hover {
      color: #2563eb;
    }
    
    .master-key-info {
      background: #fef3c7;
      border: 1px solid #fcd34d;
      border-radius: 8px;
      padding: 0.75rem;
      margin-bottom: 1rem;
      font-size: 0.8125rem;
      color: #92400e;
    }
    
    .no-master-key {
      text-align: center;
      padding: 1rem;
      color: #6b7280;
      font-size: 0.875rem;
    }
    
    .setup-link {
      display: block;
      margin-top: 1rem;
      padding: 0.75rem;
      background: #f3f4f6;
      border-radius: 8px;
      text-align: center;
      color: #374151;
      text-decoration: none;
      font-size: 0.875rem;
    }
    
    .setup-link:hover {
      background: #e5e7eb;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <div class="login-header">
      <div class="login-logo">üõ°Ô∏è Admin Portal</div>
      <div class="login-subtitle">Banity Platform Administration</div>
    </div>
    
    <div class="login-body">
      {errorMessage && <div class="alert error">{errorMessage}</div>}
      {successMessage && <div class="alert success">{successMessage}</div>}
      
      <div class="tabs">
        <div class="tab active" data-tab="credentials">Email Login</div>
        <div class="tab" data-tab="master">Master Key</div>
      </div>
      
      <!-- Email/Password Login -->
      <div id="credentials-tab" class="tab-content active">
        <form method="POST">
          <input type="hidden" name="loginType" value="credentials" />
          
          <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="form-input"
              placeholder="admin@example.com"
              required
            />
          </div>
          
          <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input 
              type="password" 
              id="password" 
              name="password" 
              class="form-input"
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              required
            />
          </div>
          
          <button type="submit" class="submit-btn">Sign In</button>
        </form>
        
        <a href="/admin/setup" class="setup-link">
          First time? Set up admin account ‚Üí
        </a>
      </div>
      
      <!-- Master Key Login -->
      <div id="master-tab" class="tab-content">
        {hasMasterKey ? (
          <>
            <div class="master-key-info">
              ‚ö†Ô∏è Master key login bypasses normal authentication. Use only for emergency access or initial setup.
            </div>
            
            <form method="POST">
              <input type="hidden" name="loginType" value="master_key" />
              
              <div class="form-group">
                <label for="masterKey" class="form-label">Master Key</label>
                <input 
                  type="password" 
                  id="masterKey" 
                  name="masterKey" 
                  class="form-input master-key"
                  placeholder="Enter master key"
                  required
                  autocomplete="off"
                />
              </div>
              
              <button type="submit" class="submit-btn master">Access with Master Key</button>
            </form>
          </>
        ) : (
          <div class="no-master-key">
            <p>Master key is not configured.</p>
            <p style="margin-top: 0.5rem; font-size: 0.75rem;">
              Add <code>ADMIN_MASTER_KEY</code> to your environment variables.
            </p>
          </div>
        )}
      </div>
      
      <a href="/" class="back-link">‚Üê Back to Site</a>
    </div>
  </div>
  
  <script>
    // Tab switching
    document.querySelectorAll('.tab').forEach(tab => {
      tab.addEventListener('click', () => {
        document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
        document.getElementById(`${tab.dataset.tab}-tab`)?.classList.add('active');
      });
    });
  </script>
</body>
</html>
