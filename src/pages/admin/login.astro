// src/pages/admin/login.astro
export const prerender = false;

import { supabase } from "../../lib/supabase";

let errorMessage = '';
let successMessage = '';

// Only process POST requests - no redirects on GET
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const loginType = formData.get('loginType') as string;
    
    if (loginType === 'master_key') {
      const masterKey = formData.get('masterKey') as string;
      const envMasterKey = import.meta.env.ADMIN_MASTER_KEY;
      
      if (!envMasterKey) {
        errorMessage = 'Master key not configured. Add ADMIN_MASTER_KEY to your .env file.';
      } else if (!masterKey) {
        errorMessage = 'Please enter the master key.';
      } else if (masterKey === envMasterKey) {
        Astro.cookies.set("master_key_session", masterKey, {
          path: "/",
          httpOnly: true,
          secure: import.meta.env.PROD,
          sameSite: "lax",
          maxAge: 60 * 60 * 24,
        });
        return Astro.redirect('/admin');
      } else {
        errorMessage = 'Invalid master key.';
      }
    } else {
      const email = formData.get('email') as string;
      const password = formData.get('password') as string;
      
      if (!email || !password) {
        errorMessage = 'Please enter email and password.';
      } else {
        const { data, error } = await supabase.auth.signInWithPassword({
          email,
          password,
        });
        
        if (error) {
          errorMessage = error.message;
        } else if (data.session) {
          const { data: profile } = await supabase
            .from('profiles')
            .select('role')
            .eq('id', data.session.user.id)
            .single();
          
          if (profile?.role !== 'admin' && profile?.role !== 'moderator') {
            errorMessage = 'Access denied. Admin or moderator role required.';
            await supabase.auth.signOut();
          } else {
            Astro.cookies.set("sb-access-token", data.session.access_token, {
              path: "/",
              httpOnly: true,
              secure: import.meta.env.PROD,
              sameSite: "lax",
              maxAge: 60 * 60 * 24 * 7,
            });
            Astro.cookies.set("sb-refresh-token", data.session.refresh_token, {
              path: "/",
              httpOnly: true,
              secure: import.meta.env.PROD,
              sameSite: "lax",
              maxAge: 60 * 60 * 24 * 30,
            });
            return Astro.redirect('/admin');
          }
        }
      }
    }
  } catch (e: any) {
    errorMessage = e.message || 'An error occurred';
  }
}
