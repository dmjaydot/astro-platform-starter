
export const prerender = false;

import { supabase, getSession, hasAdminAccess } from '../../lib/supabase';

const masterKey = import.meta.env.ADMIN_MASTER_KEY;

// Error messages mapping
const errorParam = Astro.url.searchParams.get('error');
const errorMessages = {
  session_expired: 'Your session has expired. Please log in again.',
  auth_failed: 'Authentication failed. Please try again.',
  access_check_failed: 'Unable to verify permissions. Please try again.',
};
let errorMessage = errorMessages[errorParam] || '';

// Handle form submission
if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const loginType = form.get('loginType');

  if (loginType === 'master_key') {
    const submittedKey = form.get('masterKey');

    if (!masterKey) errorMessage = 'Master key not configured on server.';
    else if (submittedKey === masterKey) {
      const expiry = new Date(Date.now() + 24 * 60 * 60 * 1000);
      Astro.cookies.set('admin-master-session', masterKey, {
        path: '/',
        httpOnly: true,
        secure: import.meta.env.PROD,
        sameSite: 'lax',
        expires: expiry,
      });
      return Astro.redirect('/admin');
    } else {
      errorMessage = 'Invalid master key.';
    }
  } else {
    const email = form.get('email');
    const password = form.get('password');

    const { data, error } = await supabase.auth.signInWithPassword({ email, password });
    if (error) errorMessage = error.message;
    else if (data.session) {
      const access = await hasAdminAccess(data.session.user.id);
      if (!access.isAdmin && !access.isModerator) {
        errorMessage = 'You do not have admin access.';
        await supabase.auth.signOut();
      } else {
        Astro.cookies.set('sb-access-token', data.session.access_token, {
          path: '/',
          httpOnly: true,
          secure: import.meta.env.PROD,
          sameSite: 'lax',
          maxAge: 60 * 60 * 24 * 7,
        });
        Astro.cookies.set('sb-refresh-token', data.session.refresh_token, {
          path: '/',
          httpOnly: true,
          secure: import.meta.env.PROD,
          sameSite: 'lax',
          maxAge: 60 * 60 * 24 * 7,
        });
        return Astro.redirect('/admin');
      }
    }
  }
}

// Redirect if already logged in via master key
const masterSession = Astro.cookies.get('admin-master-session')?.value;
if (masterSession === masterKey && masterKey) return Astro.redirect('/admin');

// Redirect if already logged in via Supabase
const session = await getSession(Astro.cookies);
if (session) {
  const access = await hasAdminAccess(session.user.id);
  if (access.isAdmin || access.isModerator) return Astro.redirect('/admin');
}

const hasMasterKey = !!masterKey;
