// src/pages/admin/index.astro
export const prerender = false;

import { supabase } from '../../lib/supabase';

const masterKey = import.meta.env.ADMIN_MASTER_KEY;

// Handle logout
if (Astro.url.searchParams.get('logout') === 'true') {
  Astro.cookies.delete('sb-access-token', { path: '/' });
  Astro.cookies.delete('sb-refresh-token', { path: '/' });
  Astro.cookies.delete('admin-master-session', { path: '/' });
  return Astro.redirect('/admin/login');
}

// Get auth state from middleware (already validated)
const isMasterKeySession = Astro.locals.isMasterKeySession || false;
const session = Astro.locals.session;
const profile = Astro.locals.profile;

// Safety fallback (middleware should prevent this)
if (!isMasterKeySession && !session) {
  return Astro.redirect('/admin/login');
}

// Initialize stats with defaults
let stats = {
  totalUsers: 0,
  totalCampaigns: 0,
  pendingPosts: 0,
  totalCommunities: 0
};
let recentUsers: any[] = [];
let pendingReviews: any[] = [];
let errors: string[] = [];

// Fetch dashboard stats with error handling
try {
  const { count, error } = await supabase
    .from('profiles')
    .select('*', { count: 'exact', head: true });
  
  if (error) throw error;
  stats.totalUsers = count || 0;
} catch (err: any) {
  console.error('Failed to fetch users count:', err.message);
  errors.push('Unable to load user count');
}

try {
  const { count, error } = await supabase
    .from('campaigns')
    .select('*', { count: 'exact', head: true });
  
  if (error) throw error;
  stats.totalCampaigns = count || 0;
} catch (err: any) {
  console.error('Failed to fetch campaigns count:', err.message);
  errors.push('Unable to load campaign count');
}

try {
  const { count, error } = await supabase
    .from('posts')
    .select('*', { count: 'exact', head: true })
    .eq('status', 'pending');
  
  if (error) throw error;
  stats.pendingPosts = count || 0;
} catch (err: any) {
  console.error('Failed to fetch pending posts:', err.message);
  errors.push('Unable to load pending reviews count');
}

try {
  const { count, error } = await supabase
    .from('communities')
    .select('*', { count: 'exact', head: true });
  
  if (error) throw error;
  stats.totalCommunities = count || 0;
} catch (err: any) {
  console.error('Failed to fetch communities count:', err.message);
  errors.push('Unable to load community count');
}

// Fetch recent users with error handling
try {
  const { data, error } = await supabase
    .from('profiles')
    .select('*')
    .order('created_at', { ascending: false })
    .limit(5);
  
  if (error) throw error;
  recentUsers = data || [];
} catch (err: any) {
  console.error('Failed to fetch recent users:', err.message);
  errors.push('Unable to load recent users');
}

// Fetch pending reviews with error handling
try {
  const { data, error } = await supabase
    .from('posts')
    .select('*, profiles!creator_id(full_name, email), campaigns(title)')
    .eq('status', 'pending')
    .order('created_at', { ascending: false })
    .limit(5);
  
  if (error) throw error;
  pendingReviews = data || [];
} catch (err: any) {
  console.error('Failed to fetch pending reviews:', err.message);
  errors.push('Unable to load pending reviews');
}

const hasErrors = errors.length > 0;
