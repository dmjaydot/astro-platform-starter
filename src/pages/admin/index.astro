---
// src/pages/admin/index.astro
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

// Auth from middleware
const isMasterKeySession = Astro.locals.isMasterKeySession || false;
const session = Astro.locals.session;

// Redirect if not authenticated
if (!isMasterKeySession && !session) {
  return Astro.redirect('/admin/login');
}

// Fetch dashboard stats with error handling
let userCount = 0;
let campaignCount = 0;
let pendingReviewCount = 0;
let communityCount = 0;
let recentUsers: any[] = [];
let pendingPosts: any[] = [];
let error = null;

try {
  // Get counts
  const { count: users } = await supabase
    .from('profiles')
    .select('*', { count: 'exact', head: true });
  userCount = users || 0;

  const { count: campaigns } = await supabase
    .from('campaigns')
    .select('*', { count: 'exact', head: true });
  campaignCount = campaigns || 0;

  const { count: pending } = await supabase
    .from('posts')
    .select('*', { count: 'exact', head: true })
    .eq('status', 'pending');
  pendingReviewCount = pending || 0;

  const { count: communities } = await supabase
    .from('communities')
    .select('*', { count: 'exact', head: true });
  communityCount = communities || 0;

  // Get recent users
  const { data: usersData } = await supabase
    .from('profiles')
    .select('id, email, full_name, role, created_at, avatar_url')
    .order('created_at', { ascending: false })
    .limit(5);
  recentUsers = usersData || [];

  // Get pending posts
  const { data: postsData } = await supabase
    .from('posts')
    .select('id, title, created_at, profiles!creator_id(full_name, email)')
    .eq('status', 'pending')
    .order('created_at', { ascending: false })
    .limit(5);
  pendingPosts = postsData || [];
} catch (e: any) {
  error = e.message || 'Failed to load dashboard data';
}
---

<AdminLayout title="Dashboard">
  {error && (
    <div class="alert error">
      <strong>Error loading data:</strong> {error}
      <button onclick="location.reload()" class="btn btn-sm btn-secondary" style="margin-left: 1rem;">
        Retry
      </button>
    </div>
  )}
  
  <!-- Stats Grid -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">üë•</div>
      <div class="stat-content">
        <div class="stat-value">{userCount}</div>
        <div class="stat-label">Total Users</div>
      </div>
      <a href="/admin/users" class="stat-link">View ‚Üí</a>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">üì¢</div>
      <div class="stat-content">
        <div class="stat-value">{campaignCount}</div>
        <div class="stat-label">Campaigns</div>
      </div>
      <a href="/admin/campaigns" class="stat-link">View ‚Üí</a>
    </div>
    
    <div class="stat-card highlight">
      <div class="stat-icon">‚è≥</div>
      <div class="stat-content">
        <div class="stat-value">{pendingReviewCount}</div>
        <div class="stat-label">Pending Review</div>
      </div>
      <a href="/admin/review" class="stat-link">Review ‚Üí</a>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon">üí¨</div>
      <div class="stat-content">
        <div class="stat-value">{communityCount}</div>
        <div class="stat-label">Communities</div>
      </div>
      <a href="/admin/communities" class="stat-link">View ‚Üí</a>
    </div>
  </div>
  
  <!-- Dashboard Grid -->
  <div class="dashboard-grid">
    <!-- Recent Users -->
    <div class="panel">
      <div class="panel-header">
        <h2 class="panel-title">Recent Users</h2>
        <a href="/admin/users" class="panel-action">View All ‚Üí</a>
      </div>
      
      {recentUsers.length > 0 ? (
        <div class="list">
          {recentUsers.map(user => (
            <div class="list-item">
              <div class="user-avatar">
                {user.avatar_url ? (
                  <img src={user.avatar_url} alt={user.full_name} />
                ) : (
                  <span>{user.full_name?.charAt(0) || user.email?.charAt(0)?.toUpperCase() || '?'}</span>
                )}
              </div>
              <div class="list-content">
                <div class="list-title">{user.full_name || 'No name'}</div>
                <div class="list-subtitle">{user.email}</div>
              </div>
              <div class="list-meta">
                <span class={`role-badge ${user.role || 'creator'}`}>{user.role || 'creator'}</span>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <span>üë•</span>
          <p>No users yet</p>
        </div>
      )}
    </div>
    
    <!-- Pending Reviews -->
    <div class="panel">
      <div class="panel-header">
        <h2 class="panel-title">Pending Reviews</h2>
        <a href="/admin/review" class="panel-action">Review All ‚Üí</a>
      </div>
      
      {pendingPosts.length > 0 ? (
        <div class="list">
          {pendingPosts.map(post => (
            <div class="list-item">
              <div class="list-icon">üìÑ</div>
              <div class="list-content">
                <div class="list-title">{post.title || 'Untitled'}</div>
                <div class="list-subtitle">
                  By {post.profiles?.full_name || post.profiles?.email || 'Unknown'}
                </div>
              </div>
              <div class="list-meta">
                <span class="badge pending">Pending</span>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <span>üéâ</span>
          <p>All caught up!</p>
        </div>
      )}
    </div>
  </div>
  
  <!-- Quick Actions -->
  <div class="quick-actions">
    <h3>Quick Actions</h3>
    <div class="actions-grid">
      <a href="/admin/users" class="action-card">
        <span>üë•</span>
        <div>
          <strong>Manage Users</strong>
          <p>View and edit user accounts</p>
        </div>
      </a>
      <a href="/admin/campaigns" class="action-card">
        <span>üì¢</span>
        <div>
          <strong>Campaigns</strong>
          <p>Manage active campaigns</p>
        </div>
      </a>
      <a href="/admin/review" class="action-card">
        <span>‚úÖ</span>
        <div>
          <strong>Review Queue</strong>
          <p>Approve or reject content</p>
        </div>
      </a>
      <a href="/admin/settings" class="action-card">
        <span>‚öôÔ∏è</span>
        <div>
          <strong>Settings</strong>
          <p>Configure your platform</p>
        </div>
      </a>
    </div>
  </div>
  
  <style>
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    
    .stat-card {
      background: white;
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      display: flex;
      align-items: center;
      gap: 1rem;
      position: relative;
    }
    
    .stat-card.highlight {
      background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
      border: 2px solid #f59e0b;
    }
    
    .stat-icon {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, #dbeafe 0%, #e0e7ff 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
    }
    
    .stat-card.highlight .stat-icon {
      background: #f59e0b;
    }
    
    .stat-content {
      flex: 1;
    }
    
    .stat-value {
      font-size: 1.75rem;
      font-weight: 700;
      color: #1a1a2e;
    }
    
    .stat-label {
      font-size: 0.875rem;
      color: #6b7280;
    }
    
    .stat-link {
      font-size: 0.8125rem;
      color: #2563eb;
      text-decoration: none;
      font-weight: 500;
    }
    
    .stat-link:hover {
      text-decoration: underline;
    }
    
    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    
    .panel {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      overflow: hidden;
    }
    
    .panel-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .panel-title {
      font-size: 1rem;
      font-weight: 600;
      color: #1a1a2e;
    }
    
