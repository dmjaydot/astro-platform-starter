      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .action-card span {
      font-size: 1.5rem;
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, #dbeafe 0%, #e0e7ff 100%);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .action-card strong {
      display: block;
      color: #1a1a2e;
      margin-bottom: 0.25rem;
    }
    
