      text-decoration: underline;
    }
    
    .list {
      padding: 0;
    }
    
    .list-item {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem 1.5rem;
      border-bottom: 1px solid #f0f0f0;
    }
    
    .list-item:last-child {
      border-bottom: none;
    }
    
    .user-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
