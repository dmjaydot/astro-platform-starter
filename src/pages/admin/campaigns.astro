---
// src/pages/admin/campaigns.astro
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

// Auth from middleware
const isMasterKeySession = Astro.locals.isMasterKeySession || false;
const session = Astro.locals.session;

if (!isMasterKeySession && !session) {
  return Astro.redirect('/admin/login');
}

// Handle campaign actions
let actionMessage = '';
let actionError = '';

if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const campaignId = form.get('campaignId') as string;
  const action = form.get('action') as string;
  
  if (campaignId && action) {
    if (action === 'activate') {
      const { error } = await supabase
        .from('campaigns')
        .update({ status: 'active' })
        .eq('id', campaignId);
      
      if (error) actionError = error.message;
      else actionMessage = 'Campaign activated.';
    }
    
    if (action === 'pause') {
      const { error } = await supabase
        .from('campaigns')
        .update({ status: 'paused' })
        .eq('id', campaignId);
      
      if (error) actionError = error.message;
      else actionMessage = 'Campaign paused.';
    }
    
    if (action === 'complete') {
      const { error } = await supabase
        .from('campaigns')
        .update({ status: 'completed' })
        .eq('id', campaignId);
      
      if (error) actionError = error.message;
      else actionMessage = 'Campaign marked as complete.';
    }
    
    if (action === 'delete') {
      const { error } = await supabase
        .from('campaigns')
        .delete()
        .eq('id', campaignId);
      
      if (error) actionError = error.message;
      else actionMessage = 'Campaign deleted.';
    }
  }
}

// Fetch campaigns - only query columns that exist
const { data: campaigns, error } = await supabase
  .from("campaigns")
  .select("*")
  .order("created_at", { ascending: false });

// Calculate stats
const totalCampaigns = campaigns?.length || 0;
const activeCampaigns = campaigns?.filter(c => c.status === 'active').length || 0;
const draftCampaigns = campaigns?.filter(c => c.status === 'draft' || !c.status).length || 0;
const completedCampaigns = campaigns?.filter(c => c.status === 'completed').length || 0;
const totalBudget = campaigns?.reduce((sum, c) => sum + (c.budget || 0), 0) || 0;

// Get filter from URL
const filter = Astro.url.searchParams.get('filter') || 'all';
const filteredCampaigns = campaigns?.filter(campaign => {
  if (filter === 'all') return true;
  if (filter === 'active') return campaign.status === 'active';
  if (filter === 'draft') return campaign.status === 'draft' || !campaign.status;
  if (filter === 'paused') return campaign.status === 'paused';
  if (filter === 'completed') return campaign.status === 'completed';
  return true;
});
---

<AdminLayout title="Campaigns">
  {actionMessage && <div class="alert success">{actionMessage}</div>}
  {actionError && <div class="alert error">{actionError}</div>}
  {error && <div class="alert error">{error.message}</div>}
  
  <!-- Stats Cards -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">üì¢</div>
      <div class="stat-content">
        <div class="stat-value">{totalCampaigns}</div>
        <div class="stat-label">Total Campaigns</div>
      </div>
    </div>
    <div class="stat-card highlight">
      <div class="stat-icon">üü¢</div>
      <div class="stat-content">
        <div class="stat-value">{activeCampaigns}</div>
        <div class="stat-label">Active</div>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">‚úÖ</div>
      <div class="stat-content">
        <div class="stat-value">{completedCampaigns}</div>
        <div class="stat-label">Completed</div>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">üí∞</div>
      <div class="stat-content">
        <div class="stat-value">${totalBudget.toLocaleString()}</div>
        <div class="stat-label">Total Budget</div>
      </div>
    </div>
  </div>
  
  <!-- Filters -->
  <div class="filters-bar">
    <div class="filter-tabs">
      <a href="/admin/campaigns" class:list={["filter-tab", { active: filter === 'all' }]}>All ({totalCampaigns})</a>
      <a href="/admin/campaigns?filter=active" class:list={["filter-tab", { active: filter === 'active' }]}>Active ({activeCampaigns})</a>
      <a href="/admin/campaigns?filter=draft" class:list={["filter-tab", { active: filter === 'draft' }]}>Draft ({draftCampaigns})</a>
      <a href="/admin/campaigns?filter=paused" class:list={["filter-tab", { active: filter === 'paused' }]}>Paused</a>
      <a href="/admin/campaigns?filter=completed" class:list={["filter-tab", { active: filter === 'completed' }]}>Completed ({completedCampaigns})</a>
    </div>
  </div>
  
  <!-- Campaigns Grid -->
  {filteredCampaigns && filteredCampaigns.length > 0 ? (
    <div class="campaigns-grid">
      {filteredCampaigns.map(campaign => (
        <div class="campaign-card">
          <div class="campaign-image">
            {campaign.image_url ? (
              <img src={campaign.image_url} alt={campaign.title} />
            ) : (
              <div class="campaign-image-placeholder">
                <span>üì¢</span>
              </div>
            )}
            <div class={`campaign-status status-${campaign.status || 'draft'}`}>
              {campaign.status || 'draft'}
            </div>
          </div>
          
          <div class="campaign-body">
            <h3 class="campaign-title">{campaign.title}</h3>
            {campaign.slug && <p class="campaign-slug">/{campaign.slug}</p>}
            
            {campaign.description && (
              <p class="campaign-description">
                {campaign.description.substring(0, 100)}{campaign.description.length > 100 ? '...' : ''}
              </p>
            )}
            
            <div class="campaign-meta">
              <div class="meta-item">
                <span class="meta-label">Budget</span>
                <span class="meta-value">{campaign.budget ? `$${campaign.budget.toLocaleString()}` : '‚Äî'}</span>
              </div>
              <div class="meta-item">
                <span class="meta-label">Per Post</span>
                <span class="meta-value">{campaign.payment_per_post ? `$${campaign.payment_per_post}` : '‚Äî'}</span>
              </div>
              <div class="meta-item">
                <span class="meta-label">Created</span>
                <span class="meta-value">{new Date(campaign.created_at).toLocaleDateString()}</span>
              </div>
            </div>
            
            {campaign.deadline && (
              <div class="campaign-deadline">
                <span>üìÖ</span> Deadline: {new Date(campaign.deadline).toLocaleDateString()}
              </div>
            )}
          </div>
          
          <div class="campaign-actions">
            <div class="action-buttons">
              {campaign.status !== 'active' && (
                <form method="POST" class="inline-form">
                  <input type="hidden" name="campaignId" value={campaign.id} />
                  <button type="submit" name="action" value="activate" class="btn btn-sm btn-success">
                    ‚ñ∂ Activate
                  </button>
                </form>
              )}
              {campaign.status === 'active' && (
                <form method="POST" class="inline-form">
                  <input type="hidden" name="campaignId" value={campaign.id} />
                  <button type="submit" name="action" value="pause" class="btn btn-sm btn-warning">
                    ‚è∏ Pause
                  </button>
                </form>
              )}
              {campaign.status !== 'completed' && (
                <form method="POST" class="inline-form">
                  <input type="hidden" name="campaignId" value={campaign.id} />
                  <button type="submit" name="action" value="complete" class="btn btn-sm btn-secondary">
                    ‚úì Complete
                  </button>
                </form>
              )}
            </div>
            <form method="POST" class="inline-form">
              <input type="hidden" name="campaignId" value={campaign.id} />
              <button type="submit" name="action" value="delete" class="btn btn-sm btn-ghost" onclick="return confirm('Delete this campaign? This cannot be undone.')">
                üóëÔ∏è
              </button>
            </form>
          </div>
        </div>
      ))}
    </div>
  ) : (
    <div class="panel">
      <div class="empty-state">
        <div class="empty-state-icon">üì¢</div>
        <div class="empty-state-title">No campaigns found</div>
        <p>No campaigns match the selected filter.</p>
      </div>
    </div>
  )}
  
  <style>
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    
    .stat-card {
      background: white;
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    .stat-card.highlight {
      background: linear-gradient(135deg, #059669 0%, #047857 100%);
    }
    
    .stat-card.highlight .stat-value,
    .stat-card.highlight .stat-label {
      color: white;
    }
    
    .stat-card.highlight .stat-icon {
      background: rgba(255,255,255,0.2);
    }
    
    .stat-icon {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, #dbeafe 0%, #e0e7ff 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
    }
    
    .stat-value {
      font-size: 1.75rem;
      font-weight: 700;
      color: #1a1a2e;
    }
    
    .stat-label {
      font-size: 0.875rem;
      color: #6b7280;
    }
    
    .filters-bar {
      background: white;
      border-radius: 12px;
      padding: 1rem;
      margin-bottom: 1.5rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .filter-tabs {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }
    
    .filter-tab {
      padding: 0.5rem 1rem;
      border-radius: 8px;
      text-decoration: none;
      color: #6b7280;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.2s;
    }
    
    .filter-tab:hover {
      background: #f3f4f6;
      color: #1a1a2e;
    }
    
    .filter-tab.active {
      background: #2563eb;
      color: white;
    }
    
    .campaigns-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 1.5rem;
    }
    
    .campaign-card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      overflow: hidden;
      transition: all 0.2s;
    }
    
    .campaign-card:hover {
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      transform: translateY(-2px);
    }
    
