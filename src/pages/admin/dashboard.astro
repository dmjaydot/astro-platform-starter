---
// src/pages/admin/dashboard.astro
// Admin dashboard page

export const prerender = false;

import { requireAdminRole } from '../../lib/auth';
import { supabase } from '../../lib/supabase';

const authResult = await requireAdminRole(Astro.cookies);
if (!authResult) {
  return Astro.redirect('/admin/login');
}

const { session } = authResult;

// Fetch dashboard data
const { data: creators, error: creatorsError } = await supabase
  .from('creators')
  .select('id')
  .limit(1000);

const { data: submissions, error: submissionsError } = await supabase
  .from('submissions')
  .select('id, status')
  .limit(1000);

const { data: messages, error: messagesError } = await supabase
  .from('server_messages')
  .select('*')
  .order('created_at', { ascending: false })
  .limit(10);

const stats = {
  totalCreators: creators?.length || 0,
  totalSubmissions: submissions?.length || 0,
  pendingSubmissions: submissions?.filter(s => s.status === 'pending').length || 0,
  activeMessages: messages?.filter(m => m.is_active).length || 0,
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: #f5f5f5;
      min-height: 100vh;
    }
    .header {
      background: #1a1a2e;
      color: white;
      padding: 20px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .header h1 {
      font-size: 24px;
    }
    .header-right {
      display: flex;
      align-items: center;
      gap: 20px;
    }
    .user-info {
      font-size: 14px;
      opacity: 0.8;
    }
    .logout-btn {
      background: rgba(255,255,255,0.1);
      color: white;
      border: 1px solid rgba(255,255,255,0.2);
      padding: 8px 16px;
      border-radius: 6px;
      cursor: pointer;
      text-decoration: none;
      font-size: 14px;
    }
    .logout-btn:hover {
      background: rgba(255,255,255,0.2);
    }
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }
    .stat-card {
      background: white;
      padding: 24px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .stat-card h3 {
      font-size: 14px;
      color: #666;
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }
    .stat-card .value {
      font-size: 36px;
      font-weight: 700;
      color: #1a1a2e;
    }
    .section {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      margin-bottom: 20px;
    }
    .section-header {
      padding: 20px 24px;
      border-bottom: 1px solid #eee;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .section-header h2 {
      font-size: 18px;
      color: #333;
    }
    .section-content {
      padding: 24px;
    }
    .message-item {
      padding: 16px;
      border: 1px solid #eee;
      border-radius: 8px;
      margin-bottom: 12px;
    }
    .message-item:last-child {
      margin-bottom: 0;
    }
    .message-item h4 {
      margin-bottom: 8px;
    }
    .message-item p {
      color: #666;
      font-size: 14px;
    }
    .badge {
      display: inline-block;
      padding: 4px 8px;
      border-radius: 4px;
      font-size: 12px;
      font-weight: 500;
    }
    .badge.active {
      background: #d1fae5;
      color: #059669;
    }
    .badge.inactive {
      background: #fee2e2;
      color: #dc2626;
    }
    .empty-state {
      text-align: center;
      padding: 40px;
      color: #666;
    }
  </style>
</head>
<body>
  <header class="header">
    <h1>Admin Dashboard</h1>
    <div class="header-right">
      <span class="user-info">{session.user.email}</span>
      <a href="/api/auth/logout" class="logout-btn">Logout</a>
    </div>
  </header>

  <div class="container">
    <div class="stats-grid">
      <div class="stat-card">
        <h3>Total Creators</h3>
        <div class="value">{stats.totalCreators}</div>
      </div>
      <div class="stat-card">
        <h3>Total Submissions</h3>
        <div class="value">{stats.totalSubmissions}</div>
      </div>
      <div class="stat-card">
        <h3>Pending Review</h3>
        <div class="value">{stats.pendingSubmissions}</div>
      </div>
      <div class="stat-card">
        <h3>Active Messages</h3>
        <div class="value">{stats.activeMessages}</div>
      </div>
    </div>

    <div class="section">
      <div class="section-header">
        <h2>Recent Server Messages</h2>
      </div>
      <div class="section-content">
        {messages && messages.length > 0 ? (
          messages.map(msg => (
            <div class="message-item">
              <h4>
                {msg.title}
                <span class={`badge ${msg.is_active ? 'active' : 'inactive'}`}>
                  {msg.is_active ? 'Active' : 'Inactive'}
                </span>
              </h4>
              <p>{msg.content}</p>
            </div>
          ))
        ) : (
          <div class="empty-state">No messages yet</div>
        )}
      </div>
    </div>
  </div>
</body>
</html>
