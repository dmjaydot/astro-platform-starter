---
// src/pages/admin/messages.astro
export const prerender = false;

import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

// Auth from middleware
const isMasterKeySession = Astro.locals.isMasterKeySession || false;
const session = Astro.locals.session;

if (!isMasterKeySession && !session) {
  return Astro.redirect('/admin/login');
}

// Handle message actions
let actionMessage = '';
let actionError = '';

if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const messageId = form.get('messageId') as string;
  const action = form.get('action') as string;
  
  if (messageId && action === 'mark_read') {
    const { error } = await supabase
      .from('messages')
      .update({ is_read: true })
      .eq('id', messageId);
    
    if (error) actionError = error.message;
    else actionMessage = 'Message marked as read.';
  }
  
  if (messageId && action === 'mark_unread') {
    const { error } = await supabase
      .from('messages')
      .update({ is_read: false })
      .eq('id', messageId);
    
    if (error) actionError = error.message;
    else actionMessage = 'Message marked as unread.';
  }
  
  if (messageId && action === 'delete') {
    const { error } = await supabase
      .from('messages')
      .delete()
      .eq('id', messageId);
    
    if (error) actionError = error.message;
    else actionMessage = 'Message deleted.';
  }
  
  if (action === 'mark_all_read') {
    const { error } = await supabase
      .from('messages')
      .update({ is_read: true })
      .eq('is_read', false);
    
    if (error) actionError = error.message;
    else actionMessage = 'All messages marked as read.';
  }
}

// Fetch messages
const { data: messages, error } = await supabase
  .from("messages")
  .select("id, email, name, subject, body, created_at, is_read")
  .order("created_at", { ascending: false });

// Calculate stats
const totalMessages = messages?.length || 0;
const unreadMessages = messages?.filter(m => !m.is_read).length || 0;
const todayMessages = messages?.filter(m => {
  const msgDate = new Date(m.created_at);
  const today = new Date();
  return msgDate.toDateString() === today.toDateString();
}).length || 0;

// Get filter from URL
const filter = Astro.url.searchParams.get('filter') || 'all';
const filteredMessages = messages?.filter(message => {
  if (filter === 'all') return true;
  if (filter === 'unread') return !message.is_read;
  if (filter === 'read') return message.is_read;
  return true;
});

// Get selected message
const selectedId = Astro.url.searchParams.get('id');
const selectedMessage = selectedId ? messages?.find(m => m.id === selectedId) : null;

// If viewing a message, mark it as read
if (selectedMessage && !selectedMessage.is_read) {
  await supabase
    .from('messages')
    .update({ is_read: true })
    .eq('id', selectedMessage.id);
  selectedMessage.is_read = true;
}

const { data: messages, error } = await supabase
  .from("messages")
  .select("*")
  .order("created_at", { ascending: false });

// If table doesn't exist, show empty state
if (error?.code === '42P01') {
  // Table doesn't exist - show setup message
}
---

<AdminLayout title="Messages">
  {actionMessage && <div class="alert success">{actionMessage}</div>}
  {actionError && <div class="alert error">{actionError}</div>}
  {error && <div class="alert error">{error.message}</div>}
  
  <!-- Stats Cards -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">üì¨</div>
      <div class="stat-content">
        <div class="stat-value">{totalMessages}</div>
        <div class="stat-label">Total Messages</div>
      </div>
    </div>
    <div class="stat-card urgent">
      <div class="stat-icon">üîî</div>
      <div class="stat-content">
        <div class="stat-value">{unreadMessages}</div>
        <div class="stat-label">Unread</div>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">üìÖ</div>
      <div class="stat-content">
        <div class="stat-value">{todayMessages}</div>
        <div class="stat-label">Today</div>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">‚úâÔ∏è</div>
      <div class="stat-content">
        <div class="stat-value">{totalMessages - unreadMessages}</div>
        <div class="stat-label">Read</div>
      </div>
    </div>
  </div>
  
  <!-- Inbox Layout -->
  <div class="inbox-layout">
    <!-- Message List -->
    <div class="message-list-container">
      <div class="list-header">
        <div class="filter-tabs">
          <a href="/admin/messages" class:list={["filter-tab", { active: filter === 'all' }]}>All</a>
          <a href="/admin/messages?filter=unread" class:list={["filter-tab", { active: filter === 'unread' }]}>
            Unread {unreadMessages > 0 && <span class="badge-count">{unreadMessages}</span>}
          </a>
          <a href="/admin/messages?filter=read" class:list={["filter-tab", { active: filter === 'read' }]}>Read</a>
        </div>
        
        {unreadMessages > 0 && (
          <form method="POST">
            <button type="submit" name="action" value="mark_all_read" class="btn btn-sm btn-secondary">
              ‚úì Mark All Read
            </button>
          </form>
        )}
      </div>
      
      <div class="message-list">
        {filteredMessages && filteredMessages.length > 0 ? (
          filteredMessages.map(message => (
            <a 
              href={`/admin/messages?id=${message.id}${filter !== 'all' ? `&filter=${filter}` : ''}`}
              class:list={["message-item", { unread: !message.is_read, selected: selectedId === message.id }]}
            >
              <div class="message-avatar">
                <span>{message.name?.charAt(0) || message.email?.charAt(0)?.toUpperCase() || '?'}</span>
              </div>
              
              <div class="message-preview">
                <div class="message-header-row">
                  <span class="message-sender">{message.name || message.email.split('@')[0]}</span>
                  <span class="message-time">
                    {new Date(message.created_at).toLocaleDateString()}
                  </span>
                </div>
                <div class="message-subject">
                  {!message.is_read && <span class="unread-dot"></span>}
                  {message.subject || '(No subject)'}
                </div>
                <div class="message-snippet">
                  {message.body?.substring(0, 80) || '(No content)'}{message.body?.length > 80 ? '...' : ''}
                </div>
              </div>
            </a>
          ))
        ) : (
          <div class="empty-list">
            <span>üì≠</span>
            <p>No messages</p>
          </div>
        )}
      </div>
    </div>
    
    <!-- Message Detail -->
    <div class="message-detail-container">
      {selectedMessage ? (
        <div class="message-detail">
          <div class="detail-header">
            <h2 class="detail-subject">{selectedMessage.subject || '(No subject)'}</h2>
            
            <div class="detail-actions">
              <form method="POST" class="inline-form">
                <input type="hidden" name="messageId" value={selectedMessage.id} />
                {selectedMessage.is_read ? (
                  <button type="submit" name="action" value="mark_unread" class="btn btn-sm btn-secondary" title="Mark as Unread">
                    üì© Unread
                  </button>
                ) : (
                  <button type="submit" name="action" value="mark_read" class="btn btn-sm btn-secondary" title="Mark as Read">
                    ‚úì Read
                  </button>
                )}
              </form>
              <form method="POST" class="inline-form">
                <input type="hidden" name="messageId" value={selectedMessage.id} />
                <button 
                  type="submit" 
                  name="action" 
                  value="delete" 
                  class="btn btn-sm btn-danger"
                  onclick="return confirm('Delete this message?')"
                  title="Delete"
                >
                  üóëÔ∏è Delete
                </button>
              </form>
            </div>
          </div>
          
          <div class="sender-info">
            <div class="sender-avatar">
              <span>{selectedMessage.name?.charAt(0) || selectedMessage.email?.charAt(0)?.toUpperCase() || '?'}</span>
            </div>
            <div class="sender-details">
              <div class="sender-name">{selectedMessage.name || 'Unknown'}</div>
              <div class="sender-email">{selectedMessage.email}</div>
            </div>
            <div class="message-timestamp">
              {new Date(selectedMessage.created_at).toLocaleString()}
            </div>
          </div>
          
          <div class="message-body">
            {selectedMessage.body || '(No content)'}
          </div>
          
          <div class="reply-section">
            <a href={`mailto:${selectedMessage.email}?subject=Re: ${selectedMessage.subject}`} class="btn btn-primary">
              <span>‚Ü©Ô∏è</span> Reply via Email
            </a>
          </div>
        </div>
      ) : (
        <div class="no-message-selected">
          <div class="placeholder-icon">üì¨</div>
          <h3>Select a message</h3>
          <p>Choose a message from the list to view its contents</p>
        </div>
      )}
    </div>
  </div>
  
  <style>
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    
    .stat-card {
      background: white;
      padding: 1.5rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    .stat-card.urgent {
      background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
      border: 2px solid #f87171;
    }
    
    .stat-card.urgent .stat-icon {
      background: #ef4444;
      color: white;
    }
    
    .stat-icon {
      width: 48px;
      height: 48px;
      background: linear-gradient(135deg, #dbeafe 0%, #e0e7ff 100%);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
    }
    
    .stat-value {
      font-size: 1.75rem;
      font-weight: 700;
      color: #1a1a2e;
    }
    
    .stat-label {
      font-size: 0.875rem;
      color: #6b7280;
    }
    
    .inbox-layout {
      display: grid;
      grid-template-columns: 400px 1fr;
      gap: 1.5rem;
      height: calc(100vh - 300px);
      min-height: 500px;
    }
    
    .message-list-container {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }
    
    .list-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 1.25rem;
      border-bottom: 1px solid #f0f0f0;
      background: #f9fafb;
    }
    
    .filter-tabs {
      display: flex;
      gap: 0.25rem;
    }
    
    .filter-tab {
      padding: 0.375rem 0.75rem;
      border-radius: 6px;
      text-decoration: none;
      color: #6b7280;
      font-size: 0.8125rem;
      font-weight: 500;
      transition: all 0.2s;
      display: flex;
      align-items: center;
