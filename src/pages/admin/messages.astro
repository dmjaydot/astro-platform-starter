      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 600;
      color: #2563eb;
      flex-shrink: 0;
    }
    
    .message-preview {
      flex: 1;
      min-width: 0;
    }
    
    .message-header-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.25rem;
    }
    
    .message-sender {
      font-weight: 600;
      color: #1a1a2e;
      font-size: 0.875rem;
    }
    
    .message-item.unread .message-sender {
      color: #1e40af;
    }
    
    .message-time {
      font-size: 0.6875rem;
      color: #9ca3af;
    }
    
