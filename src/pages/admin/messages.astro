      color: #9ca3af;
    }
    
    .message-body {
      flex: 1;
      padding: 1.5rem;
      font-size: 0.9375rem;
      line-height: 1.7;
      color: #374151;
      white-space: pre-wrap;
      overflow-y: auto;
    }
    
    .reply-section {
      padding: 1rem 1.5rem;
      border-top: 1px solid #f0f0f0;
      background: #f9fafb;
    }
    
    .no-message-selected {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      color: #9ca3af;
      text-align: center;
    }
    
    .placeholder-icon {
      font-size: 4rem;
      margin-bottom: 1rem;
    }
    
    .no-message-selected h3 {
      font-size: 1.125rem;
      color: #6b7280;
      margin-bottom: 0.5rem;
    }
    
    @media (max-width: 1024px) {
      .stats-grid {
        grid-template-columns: repeat(2, 1fr);
      }
      
      .inbox-layout {
        grid-template-columns: 1fr;
        height: auto;
      }
      
      .message-list-container {
        max-height: 400px;
      }
      
      .message-detail-container {
        min-height: 400px;
      }
    }
    
    @media (max-width: 768px) {
      .stats-grid {
        grid-template-columns: 1fr;
      }
      
      .list-header {
        flex-direction: column;
        gap: 0.75rem;
        align-items: stretch;
      }
    }
  </style>
</AdminLayout>
