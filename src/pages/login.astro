// src/pages/login.astro
export const prerender = false;

import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabase";
import { getSetting } from "../lib/settings";

// Check if already logged in
const accessToken = Astro.cookies.get("sb-access-token")?.value;
const refreshToken = Astro.cookies.get("sb-refresh-token")?.value;

if (accessToken && refreshToken) {
  const { data } = await supabase.auth.setSession({
    access_token: accessToken,
    refresh_token: refreshToken,
  });
  
  if (data.session) {
    // Redirect to dashboard if already logged in
    const redirectTo = Astro.url.searchParams.get('redirect') || '/dashboard';
    return Astro.redirect(redirectTo);
  }
}

// Get settings for styling
const appearance = await getSetting('appearance');
const general = await getSetting('general');

let errorMessage = '';
const urlError = Astro.url.searchParams.get('error');

if (urlError === 'session_expired') {
  errorMessage = 'Your session has expired. Please log in again.';
} else if (urlError === 'unauthorized') {
  errorMessage = 'Please log in to access that page.';
}

// Handle login
if (Astro.request.method === 'POST') {
  const form = await Astro.request.formData();
  const email = form.get('email') as string;
  const password = form.get('password') as string;
  
  const { data, error } = await supabase.auth.signInWithPassword({
    email,
    password,
  });
  
  if (error) {
    errorMessage = error.message;
  } else if (data.session) {
    // Set cookies
    Astro.cookies.set("sb-access-token", data.session.access_token, {
      path: "/",
      httpOnly: true,
      secure: import.meta.env.PROD,
      sameSite: "lax",
      maxAge: 60 * 60 * 24 * 7,
    });
    Astro.cookies.set("sb-refresh-token", data.session.refresh_token, {
      path: "/",
      httpOnly: true,
      secure: import.meta.env.PROD,
      sameSite: "lax",
      maxAge: 60 * 60 * 24 * 30,
    });
    
    // Redirect to dashboard or requested page
    const redirectTo = Astro.url.searchParams.get('redirect') || '/dashboard';
    return Astro.redirect(redirectTo);
  }
}
