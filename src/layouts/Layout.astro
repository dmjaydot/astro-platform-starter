---
// src/layouts/Layout.astro
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} - Banity</title>
    <meta name="description" content="Banity connects creators with brands for authentic UGC campaigns.">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:wght@400;600;700&family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    
    <style is:global>
        :root {
            --color-ink: #0a0a0a;
            --color-paper: #fafaf8;
            --color-accent: #2563eb;
            --color-accent-light: #dbeafe;
            --color-muted: #6b7280;
            --color-border: #e5e7eb;
            --font-serif: 'Crimson Pro', Georgia, serif;
            --font-sans: 'DM Sans', -apple-system, sans-serif;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            scroll-behavior: smooth;
        }
        
        body {
            font-family: var(--font-sans);
            background: var(--color-paper);
            color: var(--color-ink);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }
        
        /* Header with centered navigation */
        .site-header {
            position: sticky;
            top: 0;
            background: rgba(250, 250, 248, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--color-border);
            z-index: 100;
            animation: slideDown 0.4s ease-out;
        }
        
        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
        }
        
        .header-inner {
            max-width: 1200px;
            margin: 0 auto;
            padding: 1.5rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .logo {
            font-family: var(--font-serif);
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--color-ink);
            text-decoration: none;
            letter-spacing: -0.02em;
        }
        
        /* Centered Navigation */
        .nav-center {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 3rem;
            align-items: center;
        }
        
        .nav-link {
            font-size: 0.9375rem;
            font-weight: 500;
            color: var(--color-muted);
            text-decoration: none;
            transition: all 0.2s;
            letter-spacing: 0.02em;
            padding: 0.5rem 0;
            border-bottom: 2px solid transparent;
        }
        
        .nav-link:hover {
            color: var(--color-accent);
            border-bottom-color: var(--color-accent);
        }
        
        .nav-link.active {
            color: var(--color-ink);
            font-weight: 600;
        }
        
        /* CTA Button */
        .cta-btn {
            padding: 0.625rem 1.5rem;
            background: var(--color-accent);
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.875rem;
            transition: all 0.2s;
            letter-spacing: 0.01em;
        }
        
        .cta-btn:hover {
            background: #1d4ed8;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
        }
        
        /* Main Content */
        main {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 2rem;
            min-height: calc(100vh - 200px);
        }
        
        h1 {
            font-family: var(--font-serif);
            font-size: 3rem;
            font-weight: 700;
            line-height: 1.1;
            letter-spacing: -0.03em;
            margin-bottom: 2rem;
        }
        
        /* Footer */
        .footer {
            border-top: 1px solid var(--color-border);
            margin-top: 6rem;
        }
        
        .footer-inner {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2.5rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1.5rem;
        }
        
        .footer-text {
            font-size: 0.875rem;
            color: var(--color-muted);
        }
        
        .footer-links {
            display: flex;
            gap: 2rem;
        }
        
        .footer-link {
            font-size: 0.875rem;
            color: var(--color-muted);
            text-decoration: none;
            transition: color 0.2s;
        }
        
        .footer-link:hover {
            color: var(--color-ink);
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .nav-center {
                position: static;
                transform: none;
                flex-direction: column;
                gap: 1rem;
                margin-top: 1rem;
            }
            
            .header-inner {
                flex-direction: column;
                gap: 1rem;
            }
            
            h1 {
                font-size: 2rem;
            }
            
            .footer-inner {
                flex-direction: column;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    
    <!-- Header with Centered Navigation -->
    <header class="site-header">
        <div class="header-inner">
            <a href="/" class="logo">Banity</a>
            
            <!-- Centered Navigation -->
            <nav class="nav-center">
                <a href="/" class="nav-link">Home</a>
                <a href="/clips" class="nav-link">Clips</a>
                <a href="/legal" class="nav-link">Legal</a>
            </nav>
            
            <a href="#contact" class="cta-btn">Get Started</a>
        </div>
    </header>

    <!-- Main Content Slot -->
    <main>
        <slot />
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-inner">
            <p class="footer-text">
                Â© 2025 Banity Ltd. All rights reserved.
            </p>
            <nav class="footer-links">
                <a href="/" class="footer-link">Home</a>
                <a href="/clips" class="footer-link">Clips</a>
                <a href="/legal" class="footer-link">Legal</a>
                <a href="https://banity.com" class="footer-link">banity.com</a>
            </nav>
        </div>
    </footer>

</body>
</html>
